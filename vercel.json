{
  "version": 2,
  "builds": [
    {
      "src": "**/*.@(html|js|css|png|jpg|jpeg|gif|svg|otf|ttf|woff|woff2|ico|mp3|json)",
      "use": "@vercel/static"
    },
    {
      "src": "index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|otf|ttf|woff|woff2|ico|mp3|json))", "dest": "/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|otf|ttf|woff|woff2|ico|mp3|json))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
